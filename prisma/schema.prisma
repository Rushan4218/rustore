generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * Basic user for now, will need to add cart, wishlist etc
 */

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(customer)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  Product     Product[]
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([name])
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  sku        String
  slug       String
  price      Float
  categoryId Int
  catgory    Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([name])
}

enum Role {
  admin
  customer
}
